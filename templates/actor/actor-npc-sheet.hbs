<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
<!--      <div class="resources grid grid-2col">-->
      <div class="resources">
          <div class="flex-container-center">

              <div class="label-input-one-line-container flexshrink">
                  <label for="system.tier" class="resource-label">Tier:</label>
                  <input style="width: {{width}};" type="number" name="system.tier" value="{{system.tier}}" data-dtype="Number"/>
              </div>

              <div class="flexlarge threshold-container">
                  <label for="system.health.threshold" class="resource-label">Threshold:</label>
                  <input class="align-left" type="number" name="system.health.threshold.minor" value="{{system.health.threshold.minor}}" placeholder="Minor" data-dtype="Number"/>
                  |
                  <input type="number" name="system.health.threshold.major" value="{{system.health.threshold.major}}" placeholder="Major" data-dtype="Number"/>
                  |
                  <input type="number" name="system.health.threshold.severe" value="{{system.health.threshold.severe}}" placeholder="Severe" data-dtype="Number"/>
              </div>
          <div class="flex-container-center">
              {{> "systems/daggerheart/templates/actor/parts/actor-field.hbs" type="text" label="Type" value=system.type width="150px" dtype="String" name="system.type"}}
              {{> "systems/daggerheart/templates/actor/parts/actor-field.hbs" type="number" label="HP" value=system.health.value width="150px" dtype="Number" name="system.health.value"}}
          </div>
          <div class="flex-container-center">
              {{> "systems/daggerheart/templates/actor/parts/actor-field.hbs" type="text" label="Difficulty" value=system.difficulty width="150px" dtype="String" name="system.difficulty"}}
              {{> "systems/daggerheart/templates/actor/parts/actor-field.hbs" type="number" label="Stress" value=system.stress.value width="150px" dtype="Number" name="system.stress.value"}}
          </div>
              <div class="flex-container-center">
                  {{> "systems/daggerheart/templates/actor/parts/actor-field.hbs" type="text" label="Attack" value=system.attack width="300px" dtype="String" name="system.attack"}}
              </div>

          {{!-- "flex-group-center" is also defined in the _grid.scss file
          and it will add a small amount of padding, a border, and will
          center all of its child elements content and text. --}}
